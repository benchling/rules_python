load("@rules_python//python:defs.bzl", "py_library", "py_test")

py_library(
    name = "baz",
    srcs = ["__init__.py"],
    visibility = ["//:__subpackages__"],
)

py_library(
    name = "conftest",
    testonly = True,
    srcs = ["conftest.py"],
    visibility = ["//:__subpackages__"],
)

py_test(
    name = "baz_test",
    srcs = ["__test__.py"],
    main = "__test__.py",
    deps = [
        ":conftest",
        "//bar:conftest",
    ],
)
